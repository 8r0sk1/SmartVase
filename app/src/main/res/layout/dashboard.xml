<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38"
        app:srcCompat="@drawable/sfondo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/editButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="edit"
        android:scaleType="centerInside"
        android:src="@drawable/matita"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintTop_toTopOf="@+id/guideline_top2" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="home"
        android:scaleType="centerInside"
        android:src="@drawable/home"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toTopOf="@+id/guideline_top2" />

    &lt;!&ndash; Card vuota per immagine pianta &ndash;&gt;
    <androidx.cardview.widget.CardView
        android:id="@+id/iconaPianta2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:cardBackgroundColor="#EFEFEF"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toTopOf="@+id/guideline_top2">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            &lt;!&ndash; Immagine pianta&ndash;&gt;
            <ImageView
                android:id="@+id/PlantIcon1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:outlineProvider="paddedBounds"
                android:src="@drawable/planticon1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/planticon1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



    &lt;!&ndash; Bordo barra serbatoio &ndash;&gt;
    <androidx.cardview.widget.CardView
        android:id="@+id/waterBarCorner"
        android:layout_width="60dp"
        android:layout_height="390dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#3E3E3E"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="@+id/backgroundImage"
        app:layout_constraintTop_toBottomOf="@+id/PlantName2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            &lt;!&ndash; Barra vuota del serbatoio &ndash;&gt;
            <androidx.cardview.widget.CardView
                android:id="@+id/waterBarEmpty"
                android:layout_width="55dp"
                android:layout_height="385dp"
                app:cardBackgroundColor="#47828A"
                app:cardCornerRadius="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    &lt;!&ndash; Barra piena serbatoio &ndash;&gt;
                    <androidx.cardview.widget.CardView
                        android:id="@+id/waterBarFull"
                        android:layout_width="55dp"
                        android:layout_height="300dp"
                        android:translationZ="-50dp"
                        app:cardBackgroundColor="#7EE4F2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                    &lt;!&ndash; Barra acqua &ndash;&gt;
                    <ImageView
                        android:id="@+id/dividerWater"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.74"
                        app:srcCompat="@drawable/taccalivello" />
                    &lt;!&ndash; Testo volume d'acqua&ndash;&gt;
                    <TextView
                        android:id="@+id/waterVolume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-black"
                        android:text="0.5L"
                        android:textColor="#3E3E3E"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    &lt;!&ndash; Bordo barra umidità &ndash;&gt;
    <androidx.cardview.widget.CardView
        android:id="@+id/soilMoistureBarCorner"
        android:layout_width="60dp"
        android:layout_height="390dp"
        android:layout_marginEnd="70dp"
        app:cardBackgroundColor="#3E3E3E"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/waterBarCorner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/waterBarCorner">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            &lt;!&ndash; Barra vuota umidità &ndash;&gt;
            <androidx.cardview.widget.CardView
                android:id="@+id/soilMoistureBarEmpty"
                android:layout_width="55dp"
                android:layout_height="385dp"
                app:cardBackgroundColor="#287752"
                app:cardCornerRadius="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    &lt;!&ndash; Barra piena umidità &ndash;&gt;
                    <androidx.cardview.widget.CardView
                        android:id="@+id/soilMoisrtureBarFull"
                        android:layout_width="55dp"
                        android:layout_height="300dp"
                        android:translationZ="-50dp"
                        app:cardBackgroundColor="#45BC86"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                    &lt;!&ndash; Barra umidità minima &ndash;&gt;
                    <ImageView
                        android:id="@+id/dividerMinSoilMoisture"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.74"
                        app:srcCompat="@drawable/taccalivello" />
                    &lt;!&ndash; Barra umidità massima &ndash;&gt;
                    <ImageView
                        android:id="@+id/dividerMaxSoilMoisture"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.45"
                        app:srcCompat="@drawable/taccalivello" />
                    &lt;!&ndash; Testo volume d'acqua&ndash;&gt;
                    <TextView
                        android:id="@+id/SoilMoisturePercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-black"
                        android:text="50%"
                        android:textColor="#3E3E3E"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/waterLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Water Level"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#3E3E3E"
            app:layout_constraintEnd_toEndOf="@+id/waterBarCorner"
            app:layout_constraintStart_toStartOf="@+id/waterBarCorner"
            app:layout_constraintTop_toBottomOf="@+id/waterBarCorner" />


    <TextView
        android:id="@+id/soilMoistureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Soil Moisture"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#3E3E3E"
        app:layout_constraintEnd_toEndOf="@+id/soilMoistureBarCorner"
        app:layout_constraintStart_toStartOf="@+id/soilMoistureBarCorner"
        app:layout_constraintTop_toBottomOf="@+id/soilMoistureBarCorner" />

    <TextView
        android:id="@+id/PlantName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-black"
        android:text="Ficus"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#3E3E3E"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/iconaPianta2"
        app:layout_constraintStart_toStartOf="@+id/iconaPianta2"
        app:layout_constraintTop_toBottomOf="@+id/iconaPianta2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/waterButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:contentDescription="water"
        android:foreground="@drawable/goccia"
        android:visibility="invisible"
        app:backgroundTint="#54E7F5"
        app:elevation="2dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toTopOf="@+id/guideline_bottom"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/autoWaterButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:contentDescription="autoWater"
        android:foreground="@drawable/gocciapigiata"
        android:visibility="visible"
        app:backgroundTint="#54E7F5"
        app:elevation="0dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toTopOf="@+id/guideline_bottom"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/waterButton"
        app:layout_constraintStart_toStartOf="@+id/waterButton"
        app:layout_constraintTop_toBottomOf="@+id/waterButton">

        <TextView
            android:id="@+id/autoWaterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto Mode: "
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="683dp" />

        <TextView
            android:id="@+id/offText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OFF"
            android:textColor="#F44336"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="683dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/holdToChangeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hold to change"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/waterButton"
        app:layout_constraintStart_toStartOf="@+id/waterButton"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageButton
        android:id="@+id/notificationButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="notification"
        android:scaleType="centerInside"
        android:src="@drawable/notification"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/waterButton"
        app:layout_constraintEnd_toEndOf="@+id/waterButton"
        app:layout_constraintStart_toStartOf="@+id/waterButton" />

    <ImageButton
        android:id="@+id/notificationOFFButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="notification"
        android:scaleType="centerInside"
        android:src="@drawable/notificationoff"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/waterButton"
        app:layout_constraintEnd_toEndOf="@+id/waterButton"
        app:layout_constraintStart_toStartOf="@+id/waterButton" />-->


</androidx.constraintlayout.widget.ConstraintLayout>