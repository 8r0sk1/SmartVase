<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CB1F332A">

    <TextView
        android:id="@+id/soilMoistureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Soil Moisture"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#EFEFEF"
        app:layout_constraintEnd_toEndOf="@+id/soilMoistureBarCorner"
        app:layout_constraintStart_toStartOf="@+id/soilMoistureBarCorner"
        app:layout_constraintTop_toBottomOf="@+id/soilMoistureBarCorner" />

    <TextView
        android:id="@+id/plantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-black"
        android:text="Ficus"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#EFEFEF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/iconaPianta"
        app:layout_constraintStart_toStartOf="@+id/iconaPianta"
        app:layout_constraintTop_toBottomOf="@+id/iconaPianta" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="home"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toTopOf="@+id/guideline_top" />

    <ImageButton
        android:id="@+id/editButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="home"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintTop_toTopOf="@+id/guideline_top" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="32dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="32dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Card vuota per immagine pianta -->
    <TextView
        android:id="@+id/offText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:textColor="#FF5722"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_bottom"
        app:layout_constraintStart_toEndOf="@+id/AutoTextBig"
        app:layout_constraintTop_toBottomOf="@+id/autoWaterButton" />

    <TextView
        android:id="@+id/AutoTextBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto mode: "
        app:layout_constraintBottom_toTopOf="@+id/guideline_bottom"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/autoWaterButton" />

    <TextView
        android:id="@+id/AutoTextSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hold to change"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_bottom"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/AutoTextBig" />

    <androidx.cardview.widget.CardView
        android:id="@+id/waterLevelBarCorner"
        android:layout_width="60dp"
        android:layout_height="390dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#3E3E3E"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/plantName">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Barra vuota umidità -->
            <androidx.cardview.widget.CardView
                android:id="@+id/waterLevelBarEmpty"
                android:layout_width="55dp"
                android:layout_height="385dp"
                app:cardBackgroundColor="#3D7E5F"
                app:cardCornerRadius="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!-- Barra umidità minima -->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/waterLevelBar"
                        android:layout_width="55dp"
                        android:layout_height="385dp"
                        android:layout_marginTop="385dp"
                        app:cardBackgroundColor="#1F25A3"
                        app:cardCornerRadius="13dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Barra umidità massima -->
                    <ImageView
                        android:id="@+id/dividerMinWaterLevel"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.74"
                        app:srcCompat="@mipmap/ic_launcher" />

                    <ImageView
                        android:id="@+id/dividerMaxwaterLevel"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.45"
                        app:srcCompat="@mipmap/ic_launcher" />
                    <!-- Testo volume d'acqua-->
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/iconaPianta"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:cardBackgroundColor="#EFEFEF"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toTopOf="@+id/guideline_top">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Immagine pianta-->
            <ImageView
                android:id="@+id/PlantIcon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:outlineProvider="paddedBounds"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <!-- Bordo barra umidità -->
    <androidx.cardview.widget.CardView
        android:id="@+id/soilMoistureBarCorner"
        android:layout_width="60dp"
        android:layout_height="390dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="70dp"
        app:cardBackgroundColor="#3E3E3E"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintTop_toBottomOf="@+id/plantName">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Barra vuota umidità -->
            <androidx.cardview.widget.CardView
                android:id="@+id/soilMoistureBarEmpty"
                android:layout_width="55dp"
                android:layout_height="385dp"
                app:cardBackgroundColor="#3D7E5F"
                app:cardCornerRadius="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!-- Barra umidità minima -->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/soilMoistureBar"
                        android:layout_width="55dp"
                        android:layout_height="385dp"
                        android:layout_marginTop="385dp"
                        app:cardBackgroundColor="#1F25A3"
                        app:cardCornerRadius="13dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/dividerMinSoilMoisture"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.74"
                        app:srcCompat="@mipmap/ic_launcher" />
                    <!-- Barra umidità massima -->
                    <ImageView
                        android:id="@+id/dividerMaxSoilMoisture"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.45"
                        app:srcCompat="@mipmap/ic_launcher" />
                    <!-- Testo volume d'acqua-->
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/maxSoilMoistureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:text="50%"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#EFEFEF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/autoWaterButton"
        app:layout_constraintEnd_toStartOf="@+id/autoWaterButton"
        app:layout_constraintTop_toTopOf="@+id/autoWaterButton"
        app:layout_constraintVertical_bias="0.437" />

    <TextView
        android:id="@+id/minSoilMoistureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:text="20%"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#EFEFEF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/notificationButton"
        app:layout_constraintEnd_toStartOf="@+id/notificationButton"
        app:layout_constraintTop_toTopOf="@+id/notificationButton"
        app:layout_constraintVertical_bias="0.437" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/autoWaterButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:clickable="true"
        android:contentDescription="maxSoilMoisture"
        app:backgroundTint="#EFEFEF"
        app:layout_constraintBottom_toTopOf="@+id/guideline_bottom"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/soilMoistureText"
        app:layout_constraintVertical_bias="0.447" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/notificationButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="280dp"
        android:clickable="true"
        android:contentDescription="minSoilMoisture"
        app:backgroundTint="#EFEFEF"
        app:layout_constraintBottom_toTopOf="@+id/autoWaterButton"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/plantName"
        app:layout_constraintVertical_bias="0.754" />

</androidx.constraintlayout.widget.ConstraintLayout>