<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CB1F332A">

    <TextView
        android:id="@+id/soilMoistureText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Soil Moisture"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#EFEFEF"
        app:layout_constraintEnd_toEndOf="@+id/soilMoistureBarCorner2"
        app:layout_constraintStart_toStartOf="@+id/soilMoistureBarCorner2"
        app:layout_constraintTop_toBottomOf="@+id/soilMoistureBarCorner2" />

    <TextView
        android:id="@+id/plantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-black"
        android:text="Ficus"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#EFEFEF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/iconaPianta3"
        app:layout_constraintStart_toStartOf="@+id/iconaPianta3"
        app:layout_constraintTop_toBottomOf="@+id/iconaPianta3" />

    <ImageButton
        android:id="@+id/discardChangesButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="home"
        android:scaleType="centerInside"
        android:src="@drawable/discardchanges"
        app:layout_constraintStart_toStartOf="@+id/guideline_left3"
        app:layout_constraintTop_toTopOf="@+id/guideline_top5" />

    <ImageButton
        android:id="@+id/confirmChangesButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="home"
        android:scaleType="centerInside"
        android:src="@drawable/confirmbutton"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right3"
        app:layout_constraintTop_toTopOf="@+id/guideline_top5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="32dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="32dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Card vuota per immagine pianta -->
    <androidx.cardview.widget.CardView
        android:id="@+id/iconaPianta3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:cardBackgroundColor="#EFEFEF"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right3"
        app:layout_constraintStart_toStartOf="@+id/guideline_left3"
        app:layout_constraintTop_toTopOf="@+id/guideline_top5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Immagine pianta-->
            <ImageView
                android:id="@+id/PlantIcon3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:outlineProvider="paddedBounds"
                android:src="@drawable/planticon1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/planticon1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <!-- Bordo barra umidità -->
    <androidx.cardview.widget.CardView
        android:id="@+id/soilMoistureBarCorner2"
        android:layout_width="60dp"
        android:layout_height="390dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="70dp"
        app:cardBackgroundColor="#3E3E3E"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right3"
        app:layout_constraintTop_toBottomOf="@+id/plantName">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Barra vuota umidità -->
            <androidx.cardview.widget.CardView
                android:id="@+id/soilMoistureBarEmpty2"
                android:layout_width="55dp"
                android:layout_height="385dp"
                app:cardBackgroundColor="#3D7E5F"
                app:cardCornerRadius="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!-- Barra umidità minima -->
                    <ImageView
                        android:id="@+id/dividerMinSoilMoisture2"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.74"
                        app:srcCompat="@drawable/taccalivello" />
                    <!-- Barra umidità massima -->
                    <ImageView
                        android:id="@+id/dividerMaxSoilMoisture2"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.45"
                        app:srcCompat="@drawable/taccalivello" />
                    <!-- Testo volume d'acqua-->
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/maxSoilMoistureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:text="50%"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#EFEFEF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/ButtonMaxSoilMoisture"
        app:layout_constraintEnd_toStartOf="@+id/ButtonMaxSoilMoisture"
        app:layout_constraintTop_toTopOf="@+id/ButtonMaxSoilMoisture"
        app:layout_constraintVertical_bias="0.437" />

    <TextView
        android:id="@+id/minSoilMoistureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:text="20%"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#EFEFEF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonMinSoilMoisture"
        app:layout_constraintEnd_toStartOf="@+id/buttonMinSoilMoisture"
        app:layout_constraintTop_toTopOf="@+id/buttonMinSoilMoisture"
        app:layout_constraintVertical_bias="0.437" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ButtonMaxSoilMoisture"
        android:contentDescription="maxSoilMoisture"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        app:backgroundTint="#EFEFEF"
        app:layout_constraintBottom_toBottomOf="@+id/soilMoistureBarCorner2"
        app:layout_constraintStart_toEndOf="@+id/soilMoistureBarCorner2"
        app:layout_constraintTop_toTopOf="@+id/soilMoistureBarCorner2"
        app:layout_constraintVertical_bias="0.447" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonMinSoilMoisture"
        android:contentDescription="minSoilMoisture"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        app:backgroundTint="#EFEFEF"
        app:layout_constraintBottom_toBottomOf="@+id/soilMoistureBarCorner2"
        app:layout_constraintStart_toEndOf="@+id/soilMoistureBarCorner2"
        app:layout_constraintTop_toTopOf="@+id/soilMoistureBarCorner2"
        app:layout_constraintVertical_bias="0.754" />


</androidx.constraintlayout.widget.ConstraintLayout>